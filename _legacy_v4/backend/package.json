{
  "name": "hydroponics-backend",
  "version": "1.0.0",
  "description": "Hydroponics automation system backend API",
  "main": "dist/app.js",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "dev:win": "tsc && node dist/app.js",
    "dev:win:watch": "nodemon --watch src --ext ts --exec \"npm run dev:win\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "node scripts/test-runner.js",
    "test:ci": "jest --ci --coverage --watchman=false --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --coverage",
    "test:debug": "VERBOSE_TESTS=true jest --runInBand --no-cache",
    "deps:check": "node scripts/deps-check.js",
    "types:check": "tsc --noEmit --skipLibCheck",
    "lint": "echo 'Lint check placeholder - add ESLint later'",
    "validate": "npm run types:check && npm run deps:check && npm run test:ci",
    
    "_comment_modular": "===== MODULAR ARCHITECTURE SCRIPTS =====",
    "build:modular": "tsc --project tsconfig.modular.json",
    "build:modular:watch": "tsc --project tsconfig.modular.json --watch",
    "test:modular": "jest --config jest.modular.config.js",
    "test:modular:watch": "jest --config jest.modular.config.js --watch",
    "test:modular:coverage": "jest --config jest.modular.config.js --coverage",
    "types:modular": "tsc --project tsconfig.modular.json --noEmit",
    "lint:modular": "eslint src-modular/ --config .eslintrc.modular.js",
    "lint:boundaries": "eslint src/ src-modular/ --config .eslintrc.modular.js",
    "deps:modular": "dependency-cruiser --config .dependency-cruiser.modular.js src src-modular",
    
    "_comment_validation": "===== ISOLATION VALIDATION SCRIPTS =====",
    "validate:isolation": "node scripts/validate-modular-isolation.js",
    "validate:imports": "node scripts/grep-imports-after.js",
    "validate:boundaries": "npm run lint:boundaries && npm run deps:modular",
    "validate:modular": "npm run types:modular && npm run test:modular && npm run validate:isolation",
    "validate:all": "npm run validate && npm run validate:modular",
    
    "_comment_ci": "===== CI PROTECTION SCRIPTS =====", 
    "ci:protect": "node scripts/ci-protect-legacy.js",
    "ci:modular": "CI_PROTECTION_MODE=strict npm run ci:protect && npm run validate:modular",
    
    "_comment_migration": "===== MIGRATION UTILITY SCRIPTS =====",
    "migration:status": "npm run validate:imports && npm run validate:isolation",
    "migration:report": "npm run migration:status && echo 'See modular-isolation-report.json for details'"
  },
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "serialport": "^13.0.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.0",
    "@types/ws": "^8.5.5",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "hydroponics",
    "automation",
    "iot",
    "express",
    "mongodb"
  ],
  "author": "Hydroponics Team",
  "license": "MIT"
}
